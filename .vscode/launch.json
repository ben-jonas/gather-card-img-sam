{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "All Unit Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${workspaceFolder}/tests/unit",
                "-v"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src",
            }
        },
        {
            "type": "aws-sam",
            "request": "direct-invoke",
            "name": "gather-card-imgs-sam:CardImgAddBatchFunction - valid",
            "invokeTarget": {
                "target": "template",
                "templatePath": "${workspaceFolder}/template.yaml",
                "logicalId": "CardImgAddBatchFunction"
            },
            "lambda": {
                "payload": {
                    "path": "${workspaceFolder}/events/csvupload/happypath/csvupload-valid.json"
                }
            }
        },
        {
            "type": "aws-sam",
            "request": "direct-invoke",
            "name": "gather-card-imgs-sam:ScrapeSingleCardImgFunction - valid",
            "invokeTarget": {
                "target": "template",
                "templatePath": "${workspaceFolder}/template.yaml",
                "logicalId": "ScrapeSingleCardImgFunction"
            },
            "lambda": {
                "payload": {
                    "path": "${workspaceFolder}/events/scraper/happypath/six-messages-sample.json"
                }
            }
        }
    ]
}